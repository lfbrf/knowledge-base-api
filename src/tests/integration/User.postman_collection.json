{
  "info": {
    "name": "Knowledge Base API - User CRUD",
    "_postman_id": "user-crud-collection-id",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@example.com\",\n  \"role\": \"Admin\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users"]
        }
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"User created\", function () {",
            "    pm.response.to.have.status(201);",
            "    pm.collectionVariables.set(\"userId\", pm.response.json().id);",
            "});"
          ],
          "type": "text/javascript"
        }
      }]
    },
    {
      "name": "Get User",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/users/{{userId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users", "{{userId}}"]
        }
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"User fetched\", function () {",
            "    pm.response.to.have.status(200);",
            "    pm.expect(pm.response.json().id).to.eql(pm.collectionVariables.get(\"userId\"));",
            "});"
          ],
          "type": "text/javascript"
        }
      }]
    },
    {
      "name": "List Users",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users"]
        }
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"Users listed\", function () {",
            "    pm.response.to.have.status(200);",
            "    pm.expect(pm.response.json()).to.be.an('array');",
            "});"
          ],
          "type": "text/javascript"
        }
      }]
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:3000/users/{{userId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users", "{{userId}}"]
        }
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"User deleted\", function () {",
            "    pm.response.to.have.status(204);",
            "});"
          ],
          "type": "text/javascript"
        }
      }]
    }
  ]
}